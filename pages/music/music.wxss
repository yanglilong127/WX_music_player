@import 'templates/header_temp/header_temp.wxss';
@import 'templates/player/player.wxss';

.container {
  display: flex;
  flex-direction: column;
}

.header_nav {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 100rpx;
}

.head_music {
  width: 45%;
  height: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
  font-size: 30rpx;
}

/**点选了新歌还是推荐菜单**/

.new_active {
  border-bottom: 2px solid #33a3f5;
  color: #33a3f5;
}

/**轮播图**/

swiper {
  margin-top: 3rpx;
}

swiper swiper-item image {
  width: 100%;
  height: 300rpx;
}

/**歌曲列表**/

.music_lists {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result_cont{
  width: 100%;
  text-indent: 20rpx;
  background: #dedede;
  color: 5d5d5d;
}
.result_cont .count{
  color: #2ca2f9;
}

.music_contain{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.music_list {
  width: 90%;
  height: 80rpx;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  flex-direction: column;
}

.active{
  background: #2ca2f9;
}
.music_list text {
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.music_name {
  color: #000;
  font-weight: 500;
}
.singer_name{
  color: #999;
  font-weight: 300;
}

.no_data{
  width: 100%;
  font-size:14px;
  background: #f5f5f5;
  text-align: center;
  line-height: 60rpx;
  margin-top:6rpx;
}
